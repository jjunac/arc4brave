{
  "name": "Arc 4 Brave",
  "description": "Base Level Extension",
  "version": "0.1",
  "manifest_version": 3,
  "action": {
    "default_icon": "logo.png"
  },
  "background": {
    "service_worker": "service_worker.js",
    "type": "module"
  },
  "permissions": [
    "tabs",
    "alarms",
    "storage",
    "sidePanel",
    "bookmarks"
  ],
  "side_panel": {
    "default_path": "side_panel.html"
  },
  "commands": {
    "Open-side-panel": {
      "suggested_key": {
        "default": "Ctrl+S",
        "mac": "Command+S"
      },
      "description": "Open side panel"
    }
  }
}